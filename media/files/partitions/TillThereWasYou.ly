  \startParenthesis \parenthesize ges:7+ b:7+ \endParenthesis \parenthesize e:7+
}


theNotes =  \relative c'' {
  \clef "treble" \key es \major \time 4/4
  \partial 4 g8 as
  \repeat volta 2 {
    \A
    bes2. g8 as | bes2. g8 as | bes4 as es'4. c8 | bes4 as2 es8 f \break
    as4 g \times 2/3 { d' d des } | c2 \times 2/3 { d,4 es f } | 
  }
  \alternative {
    { bes1 ~ | bes2. g8 as }
    { es1 | r4 g bes d
    }
  }
  \bar "||" \break
  \B
  f es2 es,4 | d es \times 2/3 { f' f es } | c bes2 g4 | des' d2 des4 | \break
  c2 bes4 as | g es2 g4 | f2. c'4 | fis,2. g8 as \bar "||" \break
  \A
  bes2. g8 as | bes2. g8 as | bes4 as es'4. c8 | bes4 as2 es8 f \break
  as4 g \times 2/3 { d' d des } | c2 \times 2/3 { d,4 es f } | es1 | R1
  \bar ".."
}

