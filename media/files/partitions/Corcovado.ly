harmonies = \chordmode {
  \set chordChanges = ##t
 d1*2:7/a as:dim7 g1:m7 c:7sus4 f2:dim f1.:6
  f1:m7 bes:7 e1:m7 a:7.13- a:m7 d:7 d:m7 as:dim7
  d1*2:7/a as:dim7 g1:m7 c:7sus4 f2:dim f1.:6
  f1:m7 f:m6 e:m7 a:m7 d:m7 g:9- e:m7 a:7 d:m7 g:7 c:6 
  
}


theNotes =  \relative c' {
  \set Score.markFormatter = #format-mark-box-alphabet
  \clef "treble" \key c \major \time 4/4
  \showStartRepeatBar \bar "[|:"
  \repeat volta 2 { \mark #1
r8 e4 d8 e d4 e8~ | e d e2. | r8 e4 d8 e d4 e8~ | e d e2. | 
r8 d4 c8 d c4 d8~ | d c4 f8~ f e4 e8~ | e4. d8~ d2~ | 2. r4 \bar "||" \break
r8 g4 f8 g f4 g8~ | g f4 g8~ g2 | r8 f4 e8 f e4 f8~ | f e f2. |
r8 e4 d8 e d4 e8~ | e d4 e8~ e d4 f8~ | f e4 f8 e4 f~ | f8 e4 d8~ d c4. \bar "||" \break
\mark #2
r8 e4 d8 e d4 e8~ | e d4 e8~ e2 | r8 e4 d8 e d4 e8~ | e d4 e8~ e g4 d8 |
d2 \times 2/3 { c4 d c } | d8 c4 f8~ f e4 e8~ | e4. d8~ d2~ | d2. r4 \bar "||" \break
r8 c'4 bes8~ bes as g f | e4. d8~ d2 | r4. b'8 a g f e | d4. c8~ c2 |
r4. a'8 g f e d | c8 b4 c8~ c d4 g8~ | g1~ | 2. r4 | \break
r4. a8 g f e d | c8 b4 c8~ c d4 c8~ }
  \once \override Score.RehearsalMark #'direction = #DOWN
  \once \override Score.RehearsalMark #'self-alignment-X = #LEFT \mark \markup "Last X Only"
  c1 | R  \bar ".."
}

chordsRhythm = \relative c''' {
  \override Rest #'staff-position = #7
  \improvisationOn \override NoteHead.no-ledgers = ##t 
}

Basse = \relative c {
  \override Rest #'staff-position = #0
  \clef "bass" \key f \major \time 4/4
}

grille = \chordmode {
  \bar "[|:"
  \repeat percent 2 d1:7/a \repeat percent 2 as:dim7 \break
  g:m7 c:7sus4 \/f2:dim f:6 f1:6 \break
  f:m7 bes:7 es:m7 a:7.13- \break
  a:m7 d:7 d:m7 as:dim7 \break \bar "||"
 \repeat percent 2 d1:7/a \repeat percent 2 as:dim7 \break
  g:m7 c:7sus4 \/f2:dim f:6 f1:6 \break
  f:m7 f:m6 e:m7 a:m7 \break
  d:m7 g:9- e:m7 a:7 \break
  d:m7 g:7 \bar ":|]" \repeat percent 2 c:6 \bar ".."
  \bar ".." }

marques = \relative c' { 
   s1 ^\markup \bold \box \fontsize #5 A s1*15
  s1 ^\markup \bold \box \fontsize #5 B s1*17 
   s1 _\markup \fontsize #3 "Last X Only"
}


