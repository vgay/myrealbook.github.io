harmonies = \chordmode {
  \set chordChanges = ##t
  f1:7+ d:9- g:m7 c:7 a:m7 d:m7 g:m7 c:7 s64 c1:m7 f:7
  bes:7+ as2:m7 des:7 ges1:7+ e2:m7 a:7 d1:7+ as2:m7 des:7 ges1:7+ g2:m7 c:7
