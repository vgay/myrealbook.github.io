}


theNotes =  \relative c' {
  \clef "treble" \key f \major \time 4/4
  r8 d4. e4 f
  \repeat volta 2 {
    a2. g4 | f4. e8 d4 e8 f~ | f1 | r8 f4. g4 a | \break
    c2. bes4 | a4. g8 f4 g8 a~ | a1 | r8 a4. b4 cis | \break
    e4. d8~ d4 a | c4. bes8~ bes4 d, | e1 | r8 e4. f4 g \break
  }
  \alternative {
    { a1 | cis,2. d4 | e1 | r8 d4. e4 f \break }
    { a2 cis,4 d | f2 e | d1 | 
      \startParenthesis \parenthesize r8 d4. e4 \endParenthesis \parenthesize f }
  }
  \bar ".." 
}

