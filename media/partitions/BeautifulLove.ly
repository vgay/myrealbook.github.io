harmonies = \chordmode {
  \set chordChanges = ##t
  s1 e:m5-7 a:5+7 d:m s g:m7 c:7 f:7+ e2:m5-7 a:7
  d1:m g:m7 bes:11+ a:7 d:m g:11+ e:m5-7 a:7 
